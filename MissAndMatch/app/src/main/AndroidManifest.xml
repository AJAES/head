    package="com.example.new_commer.missandmatch">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- 창길추가 : 진동을위한 -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ghmain"
            android:label="@string/title_activity_ghmain" />
        <activity
            android:name=".Multi_room"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="@string/title_activity_multiplay" />
        <activity
            android:name=".creater"
            android:label="@string/title_creater" />
        <activity
            android:name=".Singleplay"
            android:label="@string/title_activity_singleplay" />
        <activity
            android:name=".record"
            android:label="@string/title_activity_singleplay" />
        <activity
            android:name=".option"
            android:label="@string/title_activity_option" />
        <activity
            android:name=".howto"
            android:label="@string/title_activity_htp" />

        <activity
            android:name=".DeviceListActivity"
            android:label="@string/title_device_list"
            android:theme="@android:style/Theme.Dialog"
            android:configChanges="orientation|keyboardHidden" />

    </application>

</manifest>